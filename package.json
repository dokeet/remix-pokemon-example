{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "dev": "npx concurrently 'remix watch' 'npm run watch:css'",
    "postinstall": "remix setup node",
    "start": "vercel dev",
    "watch:css": "npx tailwindcss -o app/styles/app.css --watch",
    "prebuild": "NODE_ENV=production npx tailwindcss -i ./styles/app.css -o app/styles/app.css --minify"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.3",
    "@remix-run/vercel": "^1.0.3",
    "@vercel/node": "^1.8.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.3",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.1.2",
    "vercel": "^21.2.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
